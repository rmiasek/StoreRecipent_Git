@model RecipentStore.Dto.ShopingCreateDto

@{
    ViewData["Title"] = "ShopingCreate";
}

<h1 class="title">Dodawnie nowego zakupu</h1>

<hr />
<div class="row">
    <div class="col-md-4" >
        <form asp-action="ShopingCreate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ShopingName" class="control-label"></label>
                <input asp-for="ShopingName" class="form-control" />
                <span asp-validation-for="ShopingName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <div class="input-group">
                    <input asp-for="Price" class="form-control" />
                    <span class="input-group-text">zł</span>
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                
            </div>
            <div class="form-group">
                <label asp-for="BillID" class="control-label"></label>
                <select asp-for="BillID" class="form-control" asp-items="ViewBag.BillList"></select>
            </div>
            <div class="form-group">
                <label asp-for="CategoryID" class="control-label"></label>
                <select asp-for="CategoryID" class="form-control" asp-items="ViewBag.CategoryList"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Dodaj" class="btn btn-primary" />
                
                <a asp-action="ShopingView" class="btn btn-danger">Powrót</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
